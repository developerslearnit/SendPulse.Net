<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<TargetFrameworks>net6.0;net7.0;net8.0;net9.0</TargetFrameworks>
		<ImplicitUsings>enable</ImplicitUsings>
		<Nullable>enable</Nullable>
		<GeneratePackageOnBuild>True</GeneratePackageOnBuild>
		<PackageId>SendPulse.Net</PackageId>
		<Title>SendPulse.Net</Title>
		<Authors>Adesina Mark Omoniyi</Authors>
		<Company>DevelopersLearnIT</Company>
		<Description>SendPulse.Net is a .NET and .NET Core SDK that simplifies integration with the SendPulse API, allowing developers to send emails through SendPulse API and SMTP,SMS services, and more in their .NET and .NET Core applications. It the go-to library for .NET developers leveraging SendPulse services.</Description>
		<PackageProjectUrl>https://github.com/developerslearnit/SendPulse.Net</PackageProjectUrl>
		<PackageIcon>Logo.png</PackageIcon>
		<RepositoryUrl>https://github.com/developerslearnit/SendPulse.Net</RepositoryUrl>
		<PackageTags>sendpulse,sendpulse-email,sendpulse-sms</PackageTags>
		<PackageReadmeFile>README.md</PackageReadmeFile>
		<Version>1.0.3</Version>
	</PropertyGroup>

	<ItemGroup>
		<None Include="..\Logo.png">
			<Pack>True</Pack>
			<PackagePath>\</PackagePath>
		</None>
		<None Include="..\README.md">
			<Pack>True</Pack>
			<PackagePath>\</PackagePath>
		</None>

	</ItemGroup>

	<ItemGroup>
		<PackageReference Include="Microsoft.Extensions.Caching.Memory" Version="9.0.1" />
		<PackageReference Include="Microsoft.Extensions.Configuration" Version="9.0.1" />
		<PackageReference Include="Microsoft.Extensions.Http" Version="9.0.1" />
		<PackageReference Include="System.Net.Http" Version="4.3.4" />
	</ItemGroup>
	

</Project>
